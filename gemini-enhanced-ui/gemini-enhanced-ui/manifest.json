{
  "manifest_version": 3,
  "name": "Gemini Privacy & Navigation",
  "version": "2.0",
  "description": "增強 Gemini 體驗：提供側邊欄模糊防護、NSFW 開關，以及右側對話目錄導航功能。",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Gemini Privacy & Navigation"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "css": ["style.css"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ]
}